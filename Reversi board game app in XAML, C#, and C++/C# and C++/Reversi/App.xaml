<Application
    x:Class="Reversi.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="using:Reversi.Common.Converters">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Application-specific resources -->

            <x:String x:Key="AppName">Reversi</x:String>
            <SolidColorBrush x:Key="SettingsBackgroundBrush" Color="#003E00"/>
            <SolidColorBrush x:Key="SettingsHeaderBrush" Color="Black"/>
            <Converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <Converters:NullStateToVisibilityConverter x:Key="NullStateToVisibilityConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
